<h1>Doctors#show</h1>
<p>Find me in app/views/doctors/show.html.erb</p>

<h1><%= @doctor.name %></h1>
<h2><%= @doctor.department %></h2>
<br>
<!-- add list of appointments -->
<ul>
    <%= @doctor.appointments.each do |appt| %>
        <li><%= link_to appt.patient.name, patient_path(appt.patient) %> <%= appt.formatted_date %></li>
    <% end %>
</ul>